@using ApplicationCore.Domain
@model IEnumerable<ApplicationCore.Domain.Product>
@{
  ViewBag.Title = "Shop";
}

<h2>@ViewBag.Title</h2>
<div class="row justify-content-around">
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#shop-all" role="button" aria-haspopup="true" aria-expanded="false">All</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#shop-speakers" role="button" aria-haspopup="true" aria-expanded="false">Speakers</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#shop-headphones" role="button" aria-haspopup="true" aria-expanded="false">Headphones</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#shop-accessories" role="button" aria-haspopup="true" aria-expanded="false">Accessories</a>
    </li>
  </ul>
</div>

<div id="myTabContent " class="tab-content">
  <div class="tab-pane fade show active container" id="shop-all">
    <div class="row pt-5">
    @foreach (var product in Model)
    {
      <div class="col-4">
        @Html.Partial("_ProductCard", product)
      </div>
    }
    </div>
  </div>
  <div class="tab-pane fade" id="shop-speakers">
    <div class="row pt-5">
    @foreach (var product in Model.Where(m => m.Category == Categories.Speakers))
    {
      <div class="col-4">
        @Html.Partial("_ProductCard", product)
      </div>
    }
  </div>
  </div>
  <div class="tab-pane fade" id="shop-headphones">
      <div class="row pt-5">
      @foreach (var product in Model.Where(m => m.Category == Categories.Headphones))
      {
        <div class="col-4">
          @Html.Partial("_ProductCard", product)
        </div>
      }
    </div>
    </div>
    <div class="tab-pane fade" id="shop-accessories">
        <div class="row pt-5">
        @foreach (var product in Model.Where(m => m.Category == Categories.Accessories))
        {
          <div class="col-4">
            @Html.Partial("_ProductCard", product)
          </div>
        }
      </div>
      </div>
    </div>



