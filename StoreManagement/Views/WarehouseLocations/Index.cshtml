
@{
  ViewBag.Title = "Warehouse Locations";
}

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    <a class="btn btn-primary float-right" href="#">Add new Location</a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="products" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>Id</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
          <th>Id</th>
        </tr>
        </tfoot>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

@section scripts
{
  <script>
    $(document).ready(function () {
      const table = $("#products").DataTable({
        ajax: {
          url: "/api/warehouselocations",
          dataSrc: ""
        },
        columns: [
          {
            data: "id"
          }
        ]
      });
    });
  </script>
}
