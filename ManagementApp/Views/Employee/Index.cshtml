@model ManagementApp.Models.AllEmployeesViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<table class="table">
  <tr>
    <th>Employee Id</th>
    <th>Name</th>
    <th>Receive</th>
    <th>Stow</th>
    <th>Pick</th>
    <th>Pack</th>
    <th>Ship</th>
    <th></th>
  </tr>
  @foreach (var employee in Model.Employees)
  {
  <tr>
    <td>@employee.Id</td>
    <td>@employee.Name</td>
    <td>@Html.CheckBoxFor(_ => employee.EmployeeInfo.Receive, new { @disabled = "disabled" })</td>
    <td>@Html.CheckBoxFor(_ => employee.EmployeeInfo.Stow, new { @disabled = "disabled" })</td>
    <td>@Html.CheckBoxFor(_ => employee.EmployeeInfo.Pick, new { @disabled = "disabled" })</td>
    <td>@Html.CheckBoxFor(_ => employee.EmployeeInfo.Pack, new { @disabled = "disabled" })</td>
    <td>@Html.CheckBoxFor(_ => employee.EmployeeInfo.Ship, new { @disabled = "disabled" })</td>
    <td>@Html.ActionLink("Edit", "Edit", "Employee", new { id = employee.Id }, new { @class = "btn btn-dark" })</td>
  </tr>
  }

</table>